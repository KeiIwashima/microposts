<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <%= render 'layouts/profilepartial', user: @user %>
    </section>
  </aside>
<div class="col-md-8">
   <%= render 'follow_form' if logged_in? %>
    <h3><%= @title %> (<%= @relationships.count %>)</h3>
    <% if @relationships.any? %>
      <ol class="microposts">
        <% @relationships.each do |micropost| %>
          <li><span class="gravatar"><%= link_to gravatar_for(micropost.user, size: 42), micropost.user %></span></li>
          <li><span class="user"> <%= link_to micropost.user.name,micropost.user %></span></li>
          <li><%= micropost.content %></li>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>